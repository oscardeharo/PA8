/* tasks.json */
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "clang++",
            "args": [
                "-o",
                "a.out", // executable
                "main.cpp", // main file
                //Stuff for SFML
                "-IC:${workspaceRoot}\\SFML-2.5.1-macos-clang\\include\\SFML",
                "-LC:${workspaceRoot}\\SFML-2.5.1-macos-clang\\lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                //
                "-g",
                "-v",
                "Game.cpp",
                "Cell.cpp",
                "Bomb.cpp",
                "Number.cpp"
            ],
            "type": "shell",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "panel": "shared",
                "clear": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
